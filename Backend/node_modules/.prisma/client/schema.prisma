generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     String
}

model Tour {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String
  arrival_date      DateTime
  departure_date    DateTime
  head_count        Int
  social_media_link String
  contact_no        String
  package_name      String
}

model ContactUs {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  email      String
  message    String
  whatsappNo String
  touristNo  Int // Change from String to Int
  createdAt  DateTime @default(now())
}
